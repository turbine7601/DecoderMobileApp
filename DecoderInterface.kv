#:kivy 2.3

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<ScreenManager>
    MainScreen:
    CaesarView:
    AtbashView:
    VignereView:
    InfoScreen:

<MainScreen>
    name:"MainScreen"
    BoxLayout:
        orientation: "vertical"
        Button:
            text:"открыть дешифровщик Цезаря"
            on_press: 
                root.manager.transition.direction = "left"
                root.manager.current = "caesar"
        Button:
            text:"открыть дешифровщик Атбаш"
            on_press: 
                root.manager.transition.direction = "left"
                root.manager.current = "atbash"
        Button:
            text:"открыть дешифровщик Вижнера"
            on_press: 
                root.manager.transition.direction = "left"
                root.manager.current = "vignere"
        Button:
            text:"информация"
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "info"
        

<InfoScreen>
    name:"InfoScreen"
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            orientation:"horizontal"
            Button:
                text:"Вернуться"
                on_press: 
                    root.manager.transition.direction = "right"
                    root.manager.current = "menu"
        Label:
            text:"   Версия:\n  v.1\n   Создатели:\n  Тимофеев Павел\n  Бикасов Борис"
            text_size: self.size
            halign: 'left'
            valign: 'top'


<CaesarView>
    name:"CaesarView"
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            orientation:"horizontal"
            Button:
                text:"Вернуться"
                on_press: 
                    root.manager.transition.direction = "right"
                    root.manager.current = "menu"
            Image:
                source: "Images/caesar.webp"
                allow_stretch: True
                keep_ratio: True
        TextInput:
            id: text_to_decode
            hint_text:"Текст"
            multiline:False
        TextInput:
            id: shift
            hint_text:"Сдвиг"
            multiline:False
        BoxLayout:
            orientation:"horizontal"
            Label:
                text: "Русский"
            CheckBox:
                id: rus
        Button:
            text:"Расшифровать"
            on_press: root.clicked()
        Label:
            text:"Расшифрованный текст"
            id:dtext

<AtbashView>
    name: "AtbashView"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation:"horizontal"
            Button:
                text:"Вернуться"
                on_press:
                    root.manager.transition.direction = "right" 
                    root.manager.current = "menu"
        TextInput:
            id: text_to_decode
            hint_text: "Текст"
            multiline:False
        BoxLayout:
            orientation:"horizontal"
            Label:
                text: "Русский"
            CheckBox:
                id: rus
        Button:
            text:"Расшифровать"
            on_press: root.clicked()
        Label:
            text:"Расшифрованный текст"
            id:dtext

<VignereView>
    name:"CaesarView"
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            orientation:"horizontal"
            Button:
                text:"Вернуться"
                on_press: 
                    root.manager.transition.direction = "right"
                    root.manager.current = "menu"
        TextInput:
            id: text_to_decode
            hint_text:"Текст"
            multiline:False
        TextInput:
            id: key
            hint_text:"Ключ"
            multiline:False
        BoxLayout:
            orientation:"horizontal"
            Label:
                text: "Русский"
            CheckBox:
                id: rus
        BoxLayout:
            orientation:"horizontal"
            Label:
                text: "Шифровать"
            CheckBox:
                id: mode
        Button:
            text:"decode"
            on_press: root.clicked()
        Label:
            text:"Расшифрованный текст"
            id:dtext