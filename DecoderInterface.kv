#:kivy 2.3

<ScreenManager>
    MainScreen:
    CaesarView:

<MainScreen>
    name:"MainScreen"
    BoxLayout:
        orientation: "vertical"
        Button:
            text:"открыть дешифровщик Цезаря"
            on_press: 
                root.manager.transition.direction = "left"
                root.manager.current = "caesar"
        Button:
            text:"открыть дешифровщик Атбаш"
            on_press: 
                root.manager.transition.direction = "left"
                root.manager.current = "atbash"
        Button:
            text:"открыть дешифровщик Вижнера"
            on_press: 
                root.manager.transition.direction = "left"
                root.manager.current = "vignere"

<CaesarView>
    name:"CaesarView"
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            orientation:"horizontal"
            Button:
                text:"Вернуться"
                on_press: 
                    root.manager.transition.direction = "right"
                    root.manager.current = "menu"
            Image:
                source: "Images/caesar.webp"
                allow_stretch: True
                keep_ratio: True
        TextInput:
            id: text_to_decode
            hint_text:"Текст"
            multiline:False
        TextInput:
            id: shift
            hint_text:"Сдвиг"
            multiline:False
        BoxLayout:
            orientation:"horizontal"
            Label:
                text: "Русский"
            CheckBox:
                id: rus
        Button:
            text:"Расшифровать"
            on_press: root.clicked()
        Label:
            text:"Расшифрованный текст"
            id:dtext

<AtbashView>
    name: "AtbashView"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation:"horizontal"
            Button:
                text:"Вернуться"
                on_press:
                    root.manager.transition.direction = "right" 
                    root.manager.current = "menu"
        TextInput:
            id: text_to_decode
            hint_text: "Текст"
            multiline:False
        BoxLayout:
            orientation:"horizontal"
            Label:
                text: "Русский"
            CheckBox:
                id: rus
        Button:
            text:"Расшифровать"
            on_press: root.clicked()
        Label:
            text:"Расшифрованный текст"
            id:dtext

<VignereView>
    name:"CaesarView"
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            orientation:"horizontal"
            Button:
                text:"Вернуться"
                on_press: 
                    root.manager.transition.direction = "right"
                    root.manager.current = "menu"
        TextInput:
            id: text_to_decode
            hint_text:"Текст"
            multiline:False
        TextInput:
            id: key
            hint_text:"Ключ"
            multiline:False
        BoxLayout:
            orientation:"horizontal"
            Label:
                text: "Русский"
            CheckBox:
                id: rus
        BoxLayout:
            orientation:"horizontal"
            Label:
                text: "Шифровать"
            CheckBox:
                id: mode
        Button:
            text:"decode"
            on_press: root.clicked()
        Label:
            text:"Расшифрованный текст"
            id:dtext